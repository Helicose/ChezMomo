<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#e7e5e5">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cartegourmand"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="20dp"
            android:onClick="redirectionFormule">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">

                <TextView
                    android:text="Menu Gourmand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="75px"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:background="?attr/colorButtonNormal"
                    android:gravity="center"
                    android:padding="10dp" />

                <TextView
                    android:text="Entrée + Plat + Dessert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:layout_margin="20dp"/>

                <TextView
                    android:text="23€"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="60px"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cartebistrot"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="20dp"
            android:onClick="redirectionFormule">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">

                <TextView
                    android:text="Menu Bistrot"
                    android:background="?attr/colorButtonNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="75px"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="center"
                    android:padding="10dp" />

                <TextView
                    android:text="Entrée + Plat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:id="@+id/textView5"
                    android:gravity="center"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="ou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35px"
                    android:id="@+id/textView6"
                    android:gravity="center" />

                <TextView
                    android:text="Plat + Dessert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:id="@+id/textView7"
                    android:gravity="center" />

                <TextView
                    android:text="19€"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="60px"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cartemidi"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="20dp"
            android:onClick="redirectionFormule">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">

                <TextView
                    android:text="Menu Midi"
                    android:background="?attr/colorButtonNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="75px"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content">

                    <TextView
                        android:text="Choix entre : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:id="@+id/textView10"
                        android:gravity="center"
                        android:paddingLeft="30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="30dp">

                        <TextView
                            android:text="3 entrées"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView11"
                            android:gravity="left" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView12"
                            android:text="3 plats"
                            android:gravity="left" />
                        <TextView
                            android:text="3 desserts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView13"
                            android:gravity="left" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="13€"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="60px"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cartepetiots"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="20dp"
            android:onClick="redirectionFormule">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">

                <TextView
                    android:text="Menu des Petiots"
                    android:background="?attr/colorButtonNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="75px"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="center"
                    android:paddingTop="10dp" />

                <TextView
                    android:text="(jusqu'à 12 ans)"
                    android:background="?attr/colorButtonNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="30px"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="10dp" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Choix entre : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:id="@+id/textView18"
                        android:gravity="center"
                        android:paddingLeft="30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="30dp">

                        <TextView
                            android:text="2 entrées"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView19"
                            android:gravity="left" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView20"
                            android:text="2 plats"
                            android:gravity="left" />
                        <TextView
                            android:text="2 desserts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/textView21"
                            android:gravity="left" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="7,50€"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="60px" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>